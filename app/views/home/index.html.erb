<html>
<head>

<link rel="stylesheet" type="text/css" href="../assets/stylesheets/application.css">
<script src="../assets/javascripts/route.js"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
</head>
<body ng-app="app" ng-controller="controller">

<h1>Store Details..</h1><br>
<% for shop in @shop-%>
Shopify_Domain : <%=shop.shopify_domain%> &nbsp; - Shopify_Token :<%=shop.shopify_token%> -  Created_at : <%=shop.created_at%>  -  Updated_at : <%=shop.updated_at%></br>
<%end-%>
Tiers :
<select>
<% for tiers in @tiers-%>
<option><%=tiers.tier%></option>
<%end-%>
</select>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

Programs :
<select>
<% for programs in @programs-%>
  <option><%=programs.level%></option>
  <%end-%>
</select>

<section>
        <div class="container-fluid">
            <div class="row">

                <div>
                    <div class="col-sm-3" width="20%">
                        <div>
                            <label class="control-label"> Tiers :</label>
                            <select class='selectid' id="country" ng-model="country" ng-options="country.name for country in countries track by country._id" ng-change="GetSelectedCountry()">
                                 <option value=''>-Select Country-</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3" width="20%">
                        <div>
                            <label class="control-label">Programs :</label>
                            <select class='selectid' id="state" ng-disabled="country.length === 0 && states.length === 0" ng-model="state" ng-options="state.name for state in states track by state.id" ng-change="GetSelectedState()">
                                <option value=''>-Select State-</option>
                            </select>
                        </div>
                    </div>
                   <div class="col-sm-4" width="20%">
                        <div>
                            <label class="control-label">Test:</label>
                            <select class='selectid' id="city" ng-disabled="states.length === 0 && cities.length === 0" ng-model="city" ng-options="city for city  in cities">
                                <option value=''>-Select City-</option>
            </select>
                        </div>
                    </div> 
                    <div class="col-sm-2" width="20%">
                        <button type="button" class="btn btn-primary button" ng-click="retrieve();">Retrieve</button>
                    </div>

                </div>
            </div>
        </div>
    </section>






</body>

</html>